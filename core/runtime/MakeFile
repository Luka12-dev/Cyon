CC = gcc
AR = ar
CFLAGS = -Wall -O2 -std=c11 -I../../include
DEBUGFLAGS = -Wall -g -std=c11 -I../../include
TARGET = libcyon.a
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)

# Default build
all: $(TARGET)

$(TARGET): $(OBJ)
	@echo "ðŸ”§ Archiving $(TARGET)..."
	$(AR) rcs $(TARGET) $(OBJ)
	@echo "âœ… Build complete! -> $(TARGET)"

%.o: %.c
	@echo "ðŸ“¦ Compiling $<..."
	$(CC) $(CFLAGS) -c $< -o $@

debug:
	@echo "ðŸž Building debug version..."
	$(CC) $(DEBUGFLAGS) -c $(SRC)
	$(AR) rcs $(TARGET) $(OBJ)
	@echo "âœ… Debug build complete!"

clean:
	@echo "ðŸ§¹ Cleaning runtime build files..."
	rm -f $(OBJ) $(TARGET)

rebuild: clean all

.PHONY: all clean debug rebuild